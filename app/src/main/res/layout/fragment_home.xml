                    android:text="Total Spendings"
                    android:textColor="@color/textSecondary"/>

                <TextView
                    android:id="@+id/tvTotalSpent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹ 0"
